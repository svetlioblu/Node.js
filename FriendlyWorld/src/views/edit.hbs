
        <main class="edit">
            <!-- Edit Page (Only for logged-in users) -->
            <section id="create">
                <div class="form">
                    <h2>Edit item</h2>
                    <form class="create-form" method="POST">
                        <input type="text" name="name" id="name" placeholder="Name" value="{{oneAnimal.name}}" />
                        <input type="text" name="years" id="years" placeholder="Years" value="{{oneAnimal.years}}" />
                        <input type="text" name="kind" id="kind" placeholder="Kind" value="{{oneAnimal.kind}}" />
