<main>
    <div class="container">
        <div class="col-9">

            <!-- Start Pet Photo Post Section -->
            <div class="card">
                <div class="top">

                    <!-- Start User Details and Image Location Section -->
                    <div class="userDetails">

                        <!-- Link to User Profile Details Page-->
                        <div>
                            <div class="profilepic">
                                <div class="profile_img">
                                    <div class="image">
                                        <img src="/images/person.png" alt="img8">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h3>

                            <!-- Link to User Profile Details Page -->
                            <p>
                                {{oneCard.owner.username}}
                            </p>
                            <!-- photo's location -->
                            <span>{{oneCard.location}}</span>

                            {{#if isOwner}}
                            <div class="edit-delete-btns">

                                <!-- Edit Pet Photo -->
                                <a href="/catalog/{{oneCard.name}}/{{oneCard._id}}/edit">
                                    <img class="edit-img" src="/images/edit-pen-icon-6.jpg" alt="edit button">
                                </a>

                                <!--Delete Pet Photo -->
                                <a href="/catalog/{{oneCard.name}}/{{oneCard._id}}/delete">
                                    <img class="bin-img" src="/images/icon-remove-22.jpg" alt="bin button">
                                </a>
                            </div>
                            {{/if}}
                        </h3>
                    </div>

                </div>

                <!-- Start Pet Photo -->
                <div class="imgBx">
                    <!-- Pet Photo -->
                    <img src="{{oneCard.image}}" alt="{{oneCard.name}}" class="cover">
                </div>

                <div class="bottom">

                    <p class="message">
                        <b class="petDescription">{{oneCard.description}}</b>
                    </p>
                    <!-- Photo description -->
                    <div class="pet-details">
                        <p class="petName">Name: {{oneCard.name}}</p>
                        <p class="petAge">Age: {{oneCard.age}}</p>
                    </div>
                    {{!-- comments --}}
                    <div class="comments">
                        <div class="comments-top">
                            {{#each oneCard.comments}}
                            {{>comment}}
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{#if isAuthenticated}}
                {{!-- use unless if the owner shouldnt be able to add comment --}}
                <div class="addComments">
                    <!-- Start Add Comments Form -->
                    <form method="POST" action="/catalog/{{oneCard.name}}/{{oneCard._id}}/comments">
                        <textarea id="comment-textarea" name="message" cols="40" rows="10"
                            placeholder="Add comment..."></textarea>
                        <!-- Post Comments Button -->
                        <button type="submit">Post</button>
                    </form>
                </div>
                {{/if}}

            </div>
        </div>
    </div>
</main>